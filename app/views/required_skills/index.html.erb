<div class="content">
  <% custom_title "Skills"%>
  <script> $("li#skills a span").addClass("current")</script>
  <div id="skills">
    <h1>Habilidades</h1>
    <br />
    <ul id='skills'>
      <% for skill in @required_skills do%>
        <li>
        <%=truncate(skill.skill_name, :length => 25)%>
        <% if can? :manage, RequiredSkill%>
          <span class="links">
            <%= link_to "Editar", edit_required_skill_path(skill) %> |
            <%= link_to "X", skill, :confirm => 'Â¿Estas seguro de que deseas borrarlo?', :method => :delete %>
          </span>
        <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="clear"></div>
  <br />
  <div class="new_skill" style="display:none">
    <%form_for @required_skill do |f|%>
      <%= f.text_field :skill_name, :class => :input_floated %>
      <div class="calltoAction">
        <%= f.submit "Crear", :class => :skills_button %>
      </div>
    <% end %>
  </div>
  <%= link_to "Crear nueva habilidad", "#", :class => "button skill", :id => "new_skill_trigger" %>
</div>
