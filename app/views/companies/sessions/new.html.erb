<% custom_title "Iniciar sesión"%>
<h2>Iniciar sesión</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <p><%= f.label :email, t('.email') + " *" %><br />
  <%= f.text_field :email, :required=>'required' %></p>

  <p><%= f.label :password, t('.password') + " *" %><br />
  <%= f.password_field :password, :required=>'required', :type => "password", :minlength => "6"%></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me, t('.remember_me') %></p>
  <% end -%>

  <p><%= f.submit "Ingresar" %></p>
<% end %>

<%= render :partial => "companies/shared/links" %>

